// TypeScript compiler configuration.
{
  "compilerOptions": {
    "target": "es5", // Compile to ES5 for broader compatibility
    "module": "commonjs", // Use CommonJS modules (Node.js de
    "lib": ["ESNext"],
    "sourceMap": true, // Generate source maps for debugging
    "outDir": "api/dist",
    "rootDir": "./api/src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./api/src/*"]
     },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false, // Disable strict property initialization
    "moduleResolution": "Node"
  },
  "include": ["./api/src/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "ts-node": { // Configuration for ts-node
    "transpileOnly": true, // Speeds up development
    "require": ["tsconfig-paths/register"] // Enable path aliases in ts-node
  },
}
